@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Password Reset Sent</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="d-flex align-items-center justify-content-center vh-100 bg-light">
    <main class="form-signin w-100 m-auto text-center" style="max-width: 400px;">
        <div class="p-4 border rounded bg-white shadow">
            <h2>Password Reset Sent</h2>
            <p class="text-muted">If the email exists, a password reset link has been sent.</p>
            <a href="@Url.Action("Login", "Account")" class="btn btn-primary w-100">Back to Login</a>
        </div>
    </main>
</body>
</html>
