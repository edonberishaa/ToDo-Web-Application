@model ToDoApp.ViewModels.LoginViewModel
@{
    Layout = null; // Disables the shared layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - ToDoApp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="d-flex align-items-center justify-content-center vh-100 bg-light">
    <main class="form-signin w-100 m-auto" style="max-width: 400px;">
        <form asp-action="Login" method="post" class="p-4 border rounded bg-white shadow">
            <div asp-validation-summary="All" class="alert alert-danger"></div>

            <div class="text-center mb-3">
                <img src="https://via.placeholder.com/100" alt="Logo" class="mb-2 rounded-circle">
                <h1 class="h4 mb-3 fw-normal">Please sign in</h1>
            </div>

            <div class="form-floating mb-3">
                <input type="email" asp-for="Email" class="form-control" id="floatingInput" placeholder="name@example.com" required>
                <label for="floatingInput">Email address</label>
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>

            <div class="form-floating mb-3">
                <input type="password" asp-for="Password" class="form-control" id="floatingPassword" placeholder="Password" required>
                <label for="floatingPassword">Password</label>
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="RememberMe" type="checkbox" id="rememberMe">
                <label class="form-check-label" for="rememberMe">
                    Remember me
                </label>
            </div>

            <button class="btn btn-primary w-100 py-2" type="submit">Sign in</button>

            <div class="text-center mt-3">
                <a href="/Account/Register" class="text-decoration-none">Create an account</a> |
                <a href="/Account/ForgotPassword" class="text-decoration-none">Forgot Password?</a>
            </div>
        </form>
    </main>
</body>
</html>
